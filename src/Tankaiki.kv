<FirstScreen>:
    canvas:
        Color:
            rgb: (0.93, 0.93, 0.93)
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'images/fondo.png'
    name: "first"
    AnchorLayout:
        padding: ('5dp', '5dp', '5dp', '5dp')
        anchor_x: 'center'
        anchor_y: 'center'
        BoxLayout:
            size_hint: .3, 1
            orientation:'vertical'
            Image:
                source: "images/tankaiki.png"
                allow_stretch: True
            Label:
                bold: True
                text:'Tankaiki'
                font_size: "55"
                color: 1,1,1,1
            Button:
                size_hint: 1, .2
                text:'Empezar'
