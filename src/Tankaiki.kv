WindowManager:
    FirstScreen:
    HomeScreen:
    LoadingScreen:
    #Faltan hacer las siguientes 3 Screens
    WordScreen:
    FlashcardScreen:
    ViewFlashcardsScreen:

<FirstScreen>:
    name: "first"
    AnchorLayout:
        padding: ('5dp', '5dp', '5dp', '5dp')
        anchor_x: 'center'
        anchor_y: 'center'
        BoxLayout:
            size_hint: .3, 1
            orientation:'vertical'
            Image:
                source: "images/tankaiki.png"
                allow_stretch: True
            Label:
                text:'Tankaiki'
                font_size: "35"
            Button:
                size_hint: 1, .2
                text:'Empezar'
                # Para cambiar el screen desde aquí usar:
                on_press: app.root.current = "Home"
                # Para cambiar el screen desde el archivo .py usar:
                #on_press: root.onClickButton(app.root)

<HomeScreen>:
    name: "Home"
    BoxLayout:
        # Background Color!
        orientation:'vertical'
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
            Color: 
                rgba: 0, 0, 0, 1
        # TopBar
        TopBar:
        # Window Contents
        # Se manejan con un grid Layout,  en este caso para Home son 3 cols. Las dos primeras para mostrar contenido
        # Y la última para las opciones de la parte derecha abajo.
        GridLayout:
            cols: 3
            rows: 1
            canvas.before:
                Color: 
                    rgba: .9, .9, .9, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            HomeContents:
            RandomWord:
            BottomRightOptions:
            
<TopBar@BoxLayout>:
    orientation: 'horizontal'
    size_hint: 1, .1
    #Image:
    #    source:
    BoxLayout:
        orientation:'horizontal'
        Image:
            source: "images/tankaiki.png"
            size_hint: .15, 1
            allow_stretch: True
        Label:
            size_hint: .15, 1
            color: 0 , 0 , 0 , 1
            text:'Tankaiki'
        Label:
            size_hint: .5, 1
            text:''
        Button:
            size_hint: .1, 1
            text:'Home'
            on_press: 
                app.root.transition.direction = "right"
                app.root.current = "Home"
        Button:
            size_hint: .1, 1
            text:'Options'
            on_press: 
                app.root.transition.direction = "left"
                # app.root.current = "Loading"

<BottomRightOptions@BoxLayout>:
    size_hint: .15, .1
    orientation:'vertical'
    padding: ('5dp', '5dp', '5dp', '5dp')
    Label:
        text:''
        size_hint: 1, .8
    Button:
        text:'+'
        size_hint: 1, .1
    Button:
        text:'N+'
        size_hint: 1, .1

<HomeContents@BoxLayout>:
    orientation:'vertical'
    RecentAdded:
    AllFlashcards:


<RecentAdded@BoxLayout>:
    orientation:'vertical'
    Label:
        text:'Recently added:'
        color: 0 , 0 , 0 , 1

<AllFlashcards@GridLayout>:
    cols: 2
    Label:
        text:'Saved Flashcards groups'
        color: 0 , 0 , 0 , 1

<RandomWord@BoxLayout>:
    orientation: 'vertical'
    size_hint: .3, 1
    padding: ('5dp', '5dp', '5dp', '5dp')
    Label:
        text:'Random Word'
        color: 0 , 0 , 0 , 1
    Label:
        # Este label sería el empleado para mostrar el kanji de la random word mostrada 
        #text: 
    Button:
        text:'Reading Spoiler'
    Button:
        text: 'Meaning Spoiler'
    Label:
        text:''
        size_hint: 1, .5


