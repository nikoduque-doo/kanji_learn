WindowManager:

##########| Section pertaining Home start |##########
#####################################################

<FirstScreen>:
    canvas:
        Color:
            rgb: (0.93, 0.93, 0.93)
        Rectangle:
            pos: self.pos
            size: self.size
            source: app.path + 'images/fondo.png'
    name: "first"
    AnchorLayout:
        padding: ('5dp', '5dp', '5dp', '5dp')
        anchor_x: 'center'
        anchor_y: 'center'
        BoxLayout:
            size_hint: .3, 1
            orientation:'vertical'
            Image:
                source: app.path + "images/tankaiki.png"
                allow_stretch: True
            Label:
                bold: True
                text:'Tankaiki'
                font_size: "55"
                color: 1,1,1,1
            Button:
                size_hint: 1, .2
                text:'Empezar'
                on_press: root.onClickButton()

<HomeScreen>:
    name: "Home"
    BoxLayout:
        orientation:'vertical'
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
            Color: 
                rgba: 0, 0, 0, 1
        TopBar:
        GridLayout:
            cols: 3
            rows: 1
            canvas.before:
                Color: 
                    rgba: .9, .9, .9, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: app.path + 'images/arbol.jpg'
            BoxLayout:
                orientation: "vertical"
                spacing: "50dp"
                RecentFlashcards:
                HomeContents:
            RandomWord:
            BottomRightOptions:
            
<TopBar>:
    orientation: 'horizontal'
    size_hint: 1, .1
    BoxLayout:
        orientation:'horizontal'
        Image:
            source: app.path + "images/tankaiki.png"
            size_hint: .15, 1
            allow_stretch: True
        Label:
            size_hint: .15, 1
            color: 0 , 0 , 0 , 1
            text:'Tankaiki'
        BoxLayout:
            orientation: 'vertical'
            size_hint: .4, 1
            Label:
                color:0,0,0,1
                size_hint: 1, .4
                text:'Search'
            TextInput:
                font_name: 'mona'
                size_hint: 1, .6
                id: input
                text: ""
                multiline: False
                on_text_validate: root.onSearch(self)
        Label:
            size_hint: .01, 1
            text:''
        Button:
            size_hint: .08, 1
            background_normal: app.path + 'images/home2.png'
            on_press: root.onClickHomeButton()
        Button:
            size_hint: .1, 1
            background_normal: app.path + 'images/practice.png'
            on_press: root.onClickStartPractice()
        Label:
            size_hint: .003, 1
            text:''
        Button:
            size_hint: .1, 1
            background_normal: app.path + 'images/Options.png'
            on_press: 
                app.root.transition.direction = "left"

<BottomRightOptions>:
    size_hint: .15, .1
    orientation:'vertical'
    padding: ('5dp', '5dp', '5dp', '5dp')
    Label:
        text:''
        size_hint: 1, .8
    Button:
        text:'+'
        size_hint: 1, .1
    Button:
        text:'+GROUP'
        size_hint: 1, .1
        on_press: root.onClickAddGroup()

<HomeContents@BoxLayout>:
    orientation:'vertical'
    ScrollableGroups:
        size_hint_y: .9
        AllFlashcards2:

<RecentFlashcards>:
    orientation:'vertical'
    size_hint_y: .2

<ScrollableGroups@ScrollView>

<AllFlashcards2>:  
    size_hint_y: None
    height: self.minimum_height

<RandomWord@BoxLayout>:
    orientation: 'vertical'
    size_hint: .3, 1
    padding: ('5dp', '5dp', '5dp', '5dp')
    Label:
        text:'Random Word'
        color: 0 , 0 , 0 , 1
    Label:
        # Este label ser√≠a el empleado para mostrar el kanji de la random word mostrada 
        #text: 
    Button:
        text:'Reading Spoiler'
    Button:
        text: 'Meaning Spoiler'
    Label:
        text:''
        size_hint: 1, .5

